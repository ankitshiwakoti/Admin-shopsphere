
<div class="container-fluid">
    <div class="row justify-content-center min-vh-100 align-items-center g-0">
        <div class="col-12 col-sm-11 col-md-10 col-lg-7 col-xl-6">
            <div class="auth-card">
                <div class="card-body p-4 p-sm-5">
                    <!-- Logo -->
                    <div class="logo-container">
                        <img src="/images/logofinal.svg" alt="ShopSphere Logo" class="auth-logo-image">
                    </div>

                    <div class="text-center mb-4">
                        <h2 class="auth-title">Register your account</h2>
                    </div>

                    <!-- Signup Form -->
                    <form action="/admin/signup" method="POST">
                        <div class="mb-4">
                            <label for="username" class="auth-form-label">Username</label>
                            <input 
                                type="text" 
                                class="auth-form-input form-control" 
                                id="username" 
                                name="username" 
                                placeholder="Choose a username"
                                required
                            >
                        </div>

                        <div class="mb-4">
                            <label for="email" class="auth-form-label">Email</label>
                            <input 
                                type="email" 
                                class="auth-form-input form-control" 
                                id="email" 
                                name="email" 
                                placeholder="Enter your email"
                                required
                            >
                        </div>

                        <div class="mb-4">
                            <label for="password" class="auth-form-label">Password</label>
                            <input 
                                type="password" 
                                class="auth-form-input form-control" 
                                id="password" 
                                name="password" 
                                placeholder="Create a password"
                                minlength="8"
                                required
                            >
                        </div>

                        <div class="mb-4">
                            <label for="confirmPassword" class="auth-form-label">Confirm Password</label>
                            <input 
                                type="password" 
                                class="auth-form-input form-control" 
                                id="confirmPassword" 
                                name="confirmPassword" 
                                placeholder="Confirm your password"
                                required
                            >
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input 
                                    class="form-check-input" 
                                    type="checkbox" 
                                    id="terms" 
                                    name="terms" 
                                    required
                                >
                                <label class="form-check-label auth-remember-label" for="terms">
                                    I agree to the <a href="/terms" class="auth-link">Terms of Service</a> and 
                                    <a href="/privacy" class="auth-link">Privacy Policy</a>
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="auth-button btn">
                                Create Account
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <p class="auth-text mb-0">
                                Already have an account? 
                                <a href="/admin/login" class="auth-link">Sign In</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 