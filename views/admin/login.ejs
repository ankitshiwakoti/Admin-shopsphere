
<div class="container-fluid">
    <!-- Row for centering the form vertically and horizontally -->
    <div class="row justify-content-center min-vh-100 align-items-center g-0">
      <div class="col-12 col-sm-11 col-md-10 col-lg-7 col-xl-6">
        <!-- Authentication Card -->
        <div class="auth-card">
          <div class="card-body p-4 p-sm-5">
            
            <!-- Logo Section -->
            <div class="logo-container text-center mb-4">
              <img src="/images/logofinal.svg" alt="ShopSphere Logo" class="auth-logo-image">
            </div>
  
            <!-- Form Title -->
            <div class="text-center mb-4">
              <h2 class="auth-title">Sign in to your account</h2>
            </div>
  
            <!-- Login Form -->
            <form action="/admin/login" method="POST">
              
              <!-- Username Field -->
              <div class="mb-4">
                <label for="username" class="auth-form-label">Username</label>
                <input 
                  type="text" 
                  class="auth-form-input form-control" 
                  id="username" 
                  name="username" 
                  placeholder="Enter your username"
                  required
                >
              </div>
  
              <!-- Password Field -->
              <div class="mb-4">
                <label for="password" class="auth-form-label">Password</label>
                <input 
                  type="password" 
                  class="auth-form-input form-control" 
                  id="password" 
                  name="password" 
                  placeholder="Enter your password"
                  required
                >
              </div>
  
              <!-- Remember Me and Forgot Password -->
              <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="remember" name="remember">
                  <label class="form-check-label auth-remember-label" for="remember">
                    Remember me
                  </label>
                </div>
                <a href="/admin/forgot-password" class="auth-link">Forgot password?</a>
              </div>
  
              <!-- Submit Button -->
              <div class="d-grid">
                <button type="submit" class="auth-button btn btn-lg">
                  Sign in
                </button>
              </div>
  
              <!-- Signup Link -->
              <div class="text-center mt-4">
                <p class="auth-text mb-0">
                  Don't have an account? 
                  <a href="/admin/signup" class="auth-link">Sign up</a>
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  