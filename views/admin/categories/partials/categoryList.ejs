<tbody>
    <% categories.forEach(category => { %>
        <tr>
            <td><%= category.name %></td>
            <td><%= category.slug %></td>
            <td><%= category.parent ? category.parent.name : 'None' %></td>
            <td><%= category.description %></td>
            <td><span class="badge bg-<%= category.status === 'active' ? 'success' : 'danger' %>"><%= category.status %></span></td>
            <td>
                <a href="/admin/categories/<%= category._id %>/edit" class="btn btn-sm btn-primary me-1">
                    <i class="fas fa-edit"></i>
                </a>
                <button class="btn btn-sm btn-danger" onclick="deleteCategory('<%= category._id %>')">
                    <i class="fas fa-trash"></i>
                </button>
            </td>
        </tr>
    <% }); %>
</tbody> 