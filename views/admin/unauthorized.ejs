<%- contentFor('body') %>

<div class="container-fluid">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-6 text-center">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-4x text-danger"></i>
                    </div>
                    <h2 class="mb-3">Access Denied</h2>
                    <p class="text-muted mb-4">You don't have permission to access this page. Please contact your administrator if you believe this is an error.</p>
                    
                    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                        <div class="alert alert-danger mb-4">
                            <%= error_msg %>
                        </div>
                    <% } %>
                    
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a href="/admin/dashboard" class="btn btn-primary px-4">
                            <i class="fas fa-home me-2"></i>Back to Dashboard
                        </a>
                        <a href="/admin/login" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 