<%- contentFor('body') %>

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Product Management</h1>
        <button class="btn btn-primary btn-shadow" data-bs-toggle="modal" data-bs-target="#createProductModal">
            <i class="fas fa-plus me-2"></i>Add Product
        </button>
    </div>

    <!-- Product List Table -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive" style="max-height: 440px;">
                <table class="table table-hover mb-0">
                    <thead class="sticky-top bg-white">
                        <tr>
                            <th style="min-width: 100px;">Image</th>
                            <th style="min-width: 170px;">Name</th>
                            <th style="min-width: 170px;">Category</th>
                            <th style="min-width: 100px;" class="text-end">Price</th>
                            <th style="min-width: 100px;" class="text-end">Stock</th>
                            <th style="min-width: 120px;">Status</th>
                            <th style="min-width: 120px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof products !== 'undefined' && products) { %>
                            <% products.forEach(product => { %>
                                <tr>
                                    <td><img src="<%= product.images[0] %>" alt="<%= product.name %>" class="product-img" style="width: 50px; height: 50px; object-fit: cover;"></td>
                                    <td><%= product.name %></td>
                                    <td><%= product.category.name %></td>
                                    <td class="text-end">$<%= product.price.toLocaleString('en-US', {minimumFractionDigits: 2}) %></td>
                                    <td class="text-end"><%= product.stock.toLocaleString('en-US') %></td>
                                    <td>
                                        <% if (product.status === 'active') { %>
                                            <span class="alert alert-success py-1 px-2 mb-0">
                                                <i class="bi bi-check-circle me-1"></i><%= product.status %>
                                            </span>
                                        <% } else { %>
                                            <span class="alert alert-warning py-1 px-2 mb-0">
                                                <i class="bi bi-x-circle me-1"></i><%= product.status %>
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/admin/products/<%= product._id %>/edit" class="action-icon edit" title="Edit Product">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="/admin/products/<%= product._id %>/delete" method="POST" class="d-inline">
                                            <button type="submit" class="action-icon delete" title="Delete Product" onclick="return confirm('Are you sure you want to delete this product?')">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center">No products found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <nav aria-label="Product table pagination" class="mt-3">
                <ul class="pagination justify-content-end">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Create Product Modal -->
<div class="modal fade" id="createProductModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <%- include('partials/productForm') %>
            </div>
        </div>
    </div>
</div>

